<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!--播放器组件，占据全画幅-->
    <androidx.media3.ui.PlayerView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:use_controller="false"
        tools:background="#333333" >
    </androidx.media3.ui.PlayerView>

    <!-- 播放/缓冲进度条 -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:max="100"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:progress="0"
        android:secondaryProgress="0"
        android:progressTint="#FFFFFF"
        android:secondaryProgressTint="#4DFFFFFF"
        android:progressBackgroundTint="#33FFFFFF"
        android:thumb="@android:color/transparent"
        android:splitTrack="false"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        app:layout_constraintTop_toBottomOf="@id/layout_info"
        />

    <!-- 右边操作栏   -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_input"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 头像 -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="20dp">
            <!-- 头像图片 响应点击个人主页点击事件-->
            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|center_horizontal"
                android:background="@drawable/bg_circle_border"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <!-- 关注按钮 -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_red_circle"
                android:padding="2dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="#FFFFFF" />
        </FrameLayout>

        <!-- 点赞按钮 -->
        <ImageView
            android:id="@+id/btn_like"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_action_favorite"
            app:tint="#FFFFFF" />
        <!-- 点赞数 -->
        <TextView
            android:id="@+id/tv_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="1422"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 评论按钮 -->
        <ImageView
            android:id="@+id/btn_comment"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/sym_action_chat"
            app:tint="#FFFFFF" />
        <!-- 评论数 -->
        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="306"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 收藏按钮 -->
        <ImageView
            android:id="@+id/btn_favorite"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="#FFFFFF" />
        <!-- 收藏数 -->
        <TextView
            android:id="@+id/tv_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="319"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- 分享按钮 -->
        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_action_share"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="分享"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- 底部信息栏 -->
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/layout_bottom_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 作者信息 -->
        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="\@Mareep"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- 视频标题 -->
        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="字节跳动工程训练营"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
        <!-- 相关搜索 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="相关搜索：ByteDance ..."
            android:textColor="#AAFFFFFF"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
    <!-- 播放进度条 -->
    <!-- 底部交互栏 -->
    <LinearLayout
        android:id="@+id/layout_bottom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_translucent_round"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="看了这么多，说点什么吧"
            android:textColor="#80FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>