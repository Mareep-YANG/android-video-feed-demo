<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!--播放器组件，占据全画幅-->
    <androidx.media3.ui.PlayerView
        android:id="@+id/video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resize_mode="fit"
        app:use_controller="false"
        tools:background="#333333" />

    <!-- 播放/缓冲进度条 -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progress="0"
        android:progressBackgroundTint="#33FFFFFF"
        android:progressTint="#FFFFFF"
        android:secondaryProgress="0"
        android:secondaryProgressTint="#4DFFFFFF"
        android:splitTrack="false"
        android:thumb="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 底部信息栏 - 横屏时缩小并半透明显示在左下角 -->
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="30dp"
        android:background="#60000000"
        android:orientation="vertical"
        android:padding="8dp"
        android:maxWidth="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- 作者信息 -->
        <TextView
            android:id="@+id/tv_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="\@Mareep"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />
        <!-- 视频标题 -->
        <TextView
            android:id="@+id/tv_video_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字节跳动工程训练营"
            android:textColor="#CCFFFFFF"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- 右下角操作按钮 - 横屏时缩小尺寸，横向排列 -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:background="#60000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 头像和关注 - 缩小 -->
        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="10dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_border"
                android:padding="1dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher_round" />

            <ImageView
                android:id="@+id/btn_follow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@drawable/bg_red_circle"
                android:padding="1dp"
                android:src="@android:drawable/ic_input_add"
                app:tint="#FFFFFF" />
        </FrameLayout>

        <!-- 点赞 - 缩小 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_action_favorite"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1422"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 评论 - 缩小 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/sym_action_chat"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="306"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 收藏 - 缩小 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tv_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="319"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 分享 - 缩小 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_action_share"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#FFFFFF"
                android:textSize="9sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- 底部评论输入框 - 隐藏，因为横屏空间有限 -->
    <LinearLayout
        android:id="@+id/layout_bottom_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/bottom_comment"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_translucent_round"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="看了这么多，说点什么吧"
            android:textColor="#80FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- 暂停图标 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/video_pause"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_media_pause" />

</androidx.constraintlayout.widget.ConstraintLayout>
